<!DOCTYPE html>
<html>
    <head>
        <%- include ../partials/head %>
        <link rel="stylesheet" href="/css/create.css">
    </head>
    <body>
        <%- include ../partials/nav %>
        <div class="container text-center">
            <h1>Post Your Restaurant</h1>
            <form action="/restaurants" method="POST">
                <div class="form-group">
                    <div class="formCenter">
                        <label for="restname">Restaurant Name</label>
                        <input type="text" class="form-control" id="restname" name="name" placeholder="Restaurant Name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="formCenter">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" name="price" placeholder="Price" min="0.01" step="0.01">
                    </div>
                </div>
                <div class="form-group">
                    <div class="formCenter">
                        <label for="image">Image URL</label>
                        <textarea rows="2" class="form-control" id="image" name="image" placeholder="Image URL"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="formCenter">
                        <label for="description">Description</label>
                        <textarea rows="5" class="form-control" id="description" name="description" placeholder="Description"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="formCenter">
                        <button type="submit" class="btn btn-primary form-control">Submit</button>
                    </div>
                </div>
            </form>            
        </div>
        <%- include ../partials/footer %>
    </body>
</html>