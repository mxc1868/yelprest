<!DOCTYPE html>
<html>
    <head>
        <%- include ../partials/head %>
        <link rel="stylesheet" href="/css/create.css">
    </head>
    <body>
        <%- include ../partials/nav %>
        <div class="container text-center">
            <h1>Edit</h1>
            <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <div class="formCenter">
                        <label for="restname">Restaurant Name</label>
                        <input type="text" class="form-control" id="restname" name="restaurant[name]" value="<%=restaurant.name%>">
                    </div>
                </div>
                <div class="form-group">
                    <div class="formCenter">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" name="restaurant[price]" value="<%=restaurant.price%>" min="0.01" step="0.01">
                    </div>
                </div>
                <div class="form-group">
                    <div class="formCenter">
                        <label for="image">Image URL</label>
                        <textarea rows="2" class="form-control" id="image" name="restaurant[image]"><%=restaurant.image%></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="formCenter">
                        <label for="description">Description</label>
                        <textarea rows="5" class="form-control" id="description" name="restaurant[description]"><%=restaurant.description%></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="formCenter">
                        <button type="submit" class="btn btn-primary form-control">Submit</button>
                    </div>
                </div>
            </form>            
        </div>
        <%- include ../partials/footer %>
    </body>
</html>